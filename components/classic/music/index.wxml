<view class="container" hidden="{{hidden}}">
<image class="classic-img {{isPlaying?'rotation':'pause'}}" src="{{img}}"></image>
<image class="player-img" src="{{!isPlaying?playSrc:pauseSrc}}" bind:tap="onPlay"></image>
<image class="tag" src="./images/music@tag.png"></image>
<text class="content">{{content}}</text>
</view>